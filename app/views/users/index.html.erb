<h1>Listing users</h1>
 
<table>
  <tr>
    <th>Name</th>
    <th>Email</th>
  </tr>
 
  <% @users.each do |user| %>
    <tr>
      <td><%= user.name %></td>
      <td><%= user.email %></td>
      <td>
        <% if !current_user?(user) %>
          <%= link_to 'Delete', user, method: :delete, data: { confirm: "You sure?" } %>
        <% end %>
      </td>
    </tr>
    <!--<tr><td><%= link_to 'Delete', user, method: :delete, data: { confirm: "You sure?" } %></td></tr>-->
  <% end %>
</table>

