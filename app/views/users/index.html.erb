<h1>Listing users</h1>
 
<table class="table table-hover table-condensed">
  <tr>
    <th>Name</th>
    <th>Email</th>
    <th></th>
  </tr>
 
  <% @users.each do |user| %>
    <% if !current_user?(user) %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td><%= link_to 'Delete', user, method: :delete, data: { confirm: "Are you sure you want to delete this user?" }, class: 'btn btn-danger' %></td>
      </tr>
    <% end %>
  <% end %>
</table>