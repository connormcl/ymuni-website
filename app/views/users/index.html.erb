<div class="row" id="grad">
    <div class="col-md-8 col-md-offset-2">
        <h1 id="white-text">Listing users</h1>

        <table class="table table-hover table-condensed">
          <tr>
            <th>Name</th>
            <th>Email</th>
            <th></th>
            <th></th>
          </tr>
         
          <% @users.each do |user| %>
            <% if !current_user?(user) %>
              <tr>
                <td><%= user.first_name %> <%= user.last_name %></td>
                <td><%= user.email %></td>
                <td><%= link_to 'View Application', user_app_path(user, user.app), class: 'btn btn-info' %></td>
                <td><%= link_to 'Delete', user, method: :delete, data: { confirm: "Are you sure you want to delete this user?" }, class: 'btn btn-danger' %></td>
              </tr>
            <% end %>
          <% end %>
        </table>
    </div>
</div>