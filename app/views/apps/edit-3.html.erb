<% provide(:title, "YMUNI Application") %>

<div class="row" id="grad">
    <%= render 'shared/quick_links' %>

    <div class="col-md-6" > <!--col-md-offset-3">-->
        <h1 id="white-text">YMUNI Application</h1>
        <h2 id="white-text">Part 3 - Letters of Recommendation</h2><br>

        <div class="jumbotron">
            <%= form_for(:recommender, url: recommenders_path) do |f| %>
                <%= hidden_field_tag 'page', params[:page] %>
                <%= render 'shared/error_messages' %>
                <%= render 'shared/recommender_error_messages' %>
                
                <% if @recommender.first_name == nil %>
                    <h1>Invite a recommender!</h1>
                    <p>Recommendations should be one-page in length, detailing the studentâ€™s achievements, strengths and qualities. 
                    Recommendations should come from secondary school teachers. Please invite only one recommender.</p><br>
                <% else %>
                    <h2><%= @recommender.first_name %> has been successfully invited.</h2>
                    <p>Only resubmit the form below if you wish to change your recommender. If so, please communicate with your previous recommender to let them know of this change as they will become locked out of the system.</p>
                <% end %>

                <%= f.label :recommender_first_name %><br>
                <%= f.text_field :first_name, class: 'form-control' %><br>

                <%= f.label :recommender_last_name %><br>
                <%= f.text_field :last_name, class: 'form-control' %><br>

                <%= f.label :email %><br>
                <%= f.text_field :email, class: 'form-control' %><br>

                <%= f.submit "Invite recommender", class: 'btn btn-primary btn-lg' %>
            <% end %>
        </div>

    <nav>
      <ul class="pagination pagination-lg pagination-centered">
        <li><%= link_to '<<', edit_applicant_app_path(current_user, current_user.app, :params => {:page => '2'}) %></li>
        <li><%= link_to '1', edit_applicant_app_path(current_user, current_user.app, :params => {:page => '1'}) %></li>
        <li><%= link_to '2', edit_applicant_app_path(current_user, current_user.app, :params => {:page => '2'}) %></li>
        <li class="active"><%= link_to '3', edit_applicant_app_path(current_user, current_user.app, :params => {:page => '3'}) %></li>
        <li><%= link_to '4', edit_applicant_app_path(current_user, current_user.app, :params => {:page => '4'}) %></li>
        <li><%= link_to '5', edit_applicant_app_path(current_user, current_user.app, :params => {:page => '5'}) %></li>
        <li><%= link_to '>>', edit_applicant_app_path(current_user, current_user.app, :params => {:page => '4'}) %></li>
      </ul>
    </nav>
  </div>
</div>