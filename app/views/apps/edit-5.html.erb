<% provide(:title, "YMUNI Application") %>

<div class="row">
    <div class="col-md-3">
        <h3>Quick links:</h3>
        <%= link_to 'General Information', edit_user_app_path(current_user, current_user.app, params.merge(:page => '1')), class: 'btn btn-default btn-block' %>
        <%= link_to 'Essays', edit_user_app_path(current_user, current_user.app, params.merge(:page => '2')), class: 'btn btn-default btn-block' %>
        <%= link_to 'Letters of Recommendation', edit_user_app_path(current_user, current_user.app, params.merge(:page => '3')), class: 'btn btn-default btn-block' %>
        <%= link_to 'Resume', edit_user_app_path(current_user, current_user.app, params.merge(:page => '4')), class: 'btn btn-default btn-block' %>
        <%= link_to 'GPA and Test Scores', edit_user_app_path(current_user, current_user.app, params.merge(:page => '5')), class: 'btn btn-default btn-block' %>
    </div>
  <div class="col-md-6">
    <h1>YMUNI Application</h1><br>
    <h2>Part 5 - GPA and Scores</h2>
    <!--<p><%= params %></p>-->

    <%= form_for([@app.user, @app]) do |f| %>
        <%= render 'shared/error_messages' %>

        <%= f.label :gpa %><br>
        <%= f.number_field :gpa, class: 'form-control' %><br>

        <%= f.label :sat_score %><br>
        <%= f.number_field :sat_score, class: 'form-control' %><br>

        <%= f.label :act_score %><br>
        <%= f.number_field :act_score, class: 'form-control' %><br>

        <%= f.label :toefl_score %><br>
        <%= f.number_field :toefl_score, class: 'form-control' %><br>

        <%= f.submit "Save changes", class: 'btn btn-primary' %>
    <% end %>

    <nav>
  <ul class="pagination pagination-lg pagination-centered">
    <li><%= link_to '<<', edit_user_app_path(current_user, current_user.app, params.merge(:page => '3')) %></li>
    <li><%= link_to '1', edit_user_app_path(current_user, current_user.app, params.merge(:page => '1')) %></li>
    <li><%= link_to '2', edit_user_app_path(current_user, current_user.app, params.merge(:page => '2')) %></li>
    <li><%= link_to '3', edit_user_app_path(current_user, current_user.app, params.merge(:page => '3')) %></li>
    <li><%= link_to '4', edit_user_app_path(current_user, current_user.app, params.merge(:page => '4')) %></li>
    <li class="active"><%= link_to '5', edit_user_app_path(current_user, current_user.app, params.merge(:page => '5')) %></li>
    <li><%= link_to '>>', '#' %></li>
  </ul>
</nav>
  </div>
</div>