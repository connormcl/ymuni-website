<h1>New Applicant</h1>
<%= form_for :applicant, url: applicants_path do |f| %>
	<%= render 'shared/error_messages' %>

  	<p>
    	<%= f.label :name %><br>
    	<%= f.text_field :name %>
  	</p>
 
  	<p>
    	<%= f.label :email %><br>
    	<%= f.text_field :email %>
  	</p>

  	<p>
  		<%= f.label :password %><br>
  		<%= f.text_field :password %><br>
  	</p>

  	<p>
  		<%= f.label :password_confirmation %><br>
  		<%= f.text_field :password_confirmation %><br>
  	</p>
 
  	<p>
    	<%= f.submit %>
  	</p>
<% end %>

<%= link_to 'Back', login_path %>